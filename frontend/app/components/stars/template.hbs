<div class="inline-flex items-center">
       {{!-- template-lint-disable no-invalid-interactive --}}
       {{#if @rating.book}}
         <img src="/assets/icons/cross.svg" alt="cross" class="h-3 w-3" {{on 'click' (fn this.deleteRating @rating.id)}}>
       {{/if}}
      {{#each this.numbers as |n|}}
        <span {{on "mouseleave" (fn this.setHover this.actualRate)}}>
        {{!-- template-lint-disable no-invalid-interactive --}}
        <svg xmlns="http://www.w3.org/2000/svg" data-rating={{n}} fill="none" viewBox="0 0 24 24" stroke-width="0.6" stroke="currentColor"
          class="w-10 h-10 cursor-pointer {{if (lte n this.starRating) "fill-background/60 text-background/70" "fill-transparent text-gray-500"}} stars " {{on "mouseover" (fn this.setHover n)}} {{on "click" (fn this.setClick n)}}>
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z">
          </path>
        </svg>
      </span>
      {{/each}} 
</div>