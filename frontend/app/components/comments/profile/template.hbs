<div class="flex flex-row my-2">
    <div class="min-w-[3em] cursor-pointer">
        <Cards::Base @addStyle="h-[8em] w-[5em]" @book={{@comment.book}}/>
    </div>
    <div class="flex flex-col mx-6 mt-10">
        <div class="flex flex-row">
            <span class="capitalize my-2 text-gray-100 font-[glenn] font-thin text-lg cursor-pointer hover:text-amber-600">{{@comment.book.title}}</span>
            <div class="flex flex-row p-2 m-1">
                {{#each this.array}}
                  <Stars::Icons/>
                {{/each}}
            </div>
        </div>
        <div class="my-3 font-thin">
            <p class="font-thin font-[glenn-light]">{{@comment.comment}}</p>
        </div>
        <div class="flex flex-row">
            {{#if this.session.isAuthenticated}}
              <span>
                {{!-- template-lint-disable no-invalid-interactive --}}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-5 h-5 {{if this.likeState "fill-[#d4ab9b] text-[#d4ab9b]" "fill-transparent text-[#d4ab9b]"}}" stroke="currentColor" {{on 'click' this.toggleLike}}>
                <path
                    d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z">
                </path>
                </svg>
             </span>
            <span class="text-white mx-1 text-sm">{{if this.likeState "aim√©" "j'aime"}}</span>
            {{/if}}
            <span class="mx-3 text-white text-sm">{{this.likeNumber}} likes</span>
        </div>
    </div>
</div>