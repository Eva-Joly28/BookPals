<div class="my-32">
    <ProfileNav::Details @user={{this.currentUser.user}}/>
    <div class=" mx-28 my-28">
        <span class="text-start p-1 text-yellow-50">Messages</span>
        <hr class="text-amber-900 bg-amber-950 h-[0.1em]"/>
        <div class="flex flex-row w-full my-16 max-h-[25em]">
            <div class="flex flex-col mx-2 max-h-[25em] w-1/3 rounded-md bg-[#493227] overflow-y-auto">
                {{#each @model.conversations as |c|}}
                    <Conversations @conversation={{c}} @isActive={{if (eq this.selectedConversation.id c.id) true false }} @selectConversation={{this.selectConversation}} />
                {{/each}}
                {{yield}}
            </div>
            <div class="flex flex-col flex-1 w-2/3 flex-grow">
                <Messages::Interface @messages={{this.actualMessages}} @conversation={{this.selectedConversation}} @otherUser={{@model.otherUser}}/>
            </div>
        </div>
    </div>
</div>